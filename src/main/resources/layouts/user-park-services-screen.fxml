                        <Insets left="5.0" />
                     </BorderPane.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </left>
               <center>
                  <Button fx:id="estimatedWaitTimesButton" mnemonicParsing="false" onAction="#onEstimatedWaitTimesButtonPressed" text="Estimated wait times LIVE!" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets />
                     </BorderPane.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </center>
